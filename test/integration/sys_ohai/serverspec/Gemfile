source 'https://rubygems.org'

ruby_version = Gem::Version.new(RUBY_VERSION)

gems = {}

if ruby_version < Gem::Version.new('2.6.0')
  # multi_json >= 1.16 requires Ruby 3.2
  gems['multi_json'] = '< 1.16'
  # net-ssh >= 7 requires ruby 2.6
  gems['net-ssh'] = '< 7'
  gems['public_suffix'] = '< 5' # required on Buster
  gems['rspec-its'] = '< 2'
else
  # The ohai gem is only required on newer platforms
  # with Omnibus-cinc
  gems['ohai'] = nil
end

if ruby_version < Gem::Version.new('2.4.0')
  gems['base64'] = '< 0.2'
end

if ruby_version < Gem::Version.new('2.2.0')
  # net-ssh >= 5 requires ruby 2.2
  gems['net-ssh'] = '< 5'
end

gems.each do |name, constraint|
  gem name, constraint
end
