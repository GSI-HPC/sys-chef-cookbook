[libdefaults]
	default_realm = <%= @realm %>
	allow_weak_crypto = no
	clockskew = 180
	kdc_timeout = 3 # Time is in seconds
	default_etypes = aes256-cts-hmac-sha1-96 des3-cbc-sha1
	ticket_lifetime = 10h
	# This option is set to make pam_krb5 fail, if TGS-REP does not succeed
	verify_ap_req_nofail = true
	# Use heimdal-kcm as Ticket cache
	# default_cc_type = KCM
[appdefaults]
	<%= "pkinit_anchors = #{@pkinit_anchor}" if @pkinit_anchor %>
	<% if @use_pkinit %>
	use_pkinit = <%= node['sys']['krb5']['use_pkinit'] %>
	try_pkinit = <%= node['sys']['krb5']['try_pkinit'] %>
	pkinit_prompt = <%= node['sys']['krb5']['pkinit_prompt'] %>
	pkinit_user = <%= node['sys']['krb5']['pkinit_user'] %>
	pkinit_anchors = <%= node['sys']['krb5']['pkinit_anchors'] %>
	<% end %>
	default_realm = <%= @realm %>
	forwardable = true
	proxiable = false
	no-adress = true
	ticket_lifetime = 10h
	encrypt = true
	forward = true
	<% if @wallet_server %>
	wallet = {
		wallet_port   = 4373
		wallet_server = <%= @wallet_server %>
        }
	<% end %>
[realms]
	<%= @realm %> = {
		<% @servers.each do |kdc| %>
		kdc = <%= kdc %>
		<% end -%>
		<% if @use_pkinit %>
		pkinit_require_eku = <%= node['sys']['krb5']['pkinit_require_eku'] %>
		pkinit_require_krbtgt_otherName = <%= node['sys']['krb5']['pkinit_require_krbtgt_otherName'] %>
		<% end %>
		admin_server = <%= @admin_server %>
	}
[password_quality]
	policies = builtin:minimum-length builtin:character-class
	min_classes = 3
	min_length = 8
[domain_realm]
	<%= @domain %> = <%= @realm.upcase %>
	.<%= @domain %> = <%= @realm.upcase %>
