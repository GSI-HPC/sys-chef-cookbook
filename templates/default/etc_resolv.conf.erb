<%= template_header %>

<%- @servers.each do |name| -%>
nameserver <%= name %>
<%- end -%>

<%# 'search' and 'domain' are mutually exclusive, the latter will be ignored %>
<%- if @search %>search <%= @search %>
<%- elsif @domain %>domain <%= @domain %>
<%- end -%>
<%- if @options %>options <%= @options.join(' ') %><% end -%>
