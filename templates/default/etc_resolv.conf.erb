<%= template_header %>
<%- @servers.each do |ip| -%>
nameserver <%= ip %>
<%- end -%>

<%# 'search' and 'domain' are mutually exclusive, the latter will be ignored %>
<%- if @search %>search <%= @search.join(' ') %>
<%- elsif @domain %>domain <%= @domain %>
<%- end -%>
<%- unless @options.empty? %>options <%= @options.join(' ') %><% end -%>
