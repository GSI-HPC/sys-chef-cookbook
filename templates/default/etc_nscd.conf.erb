<% node['sys']['nscd'].each do |map, config| -%>
<% max = config.keys.max { |a, b| a.length <=> b.length }.length %>
<% config.each do |k,v| -%>
<% spaces = ""; (max + 1 - k.length).times { spaces << " " } -%>
<% if map.eql?("config") -%>
<%= "#{k}#{spaces}#{v}" %>
<% else -%>
<%= "#{k}#{spaces}#{map} #{v}" %>
<% end -%>
<% end -%>
<% end -%>
