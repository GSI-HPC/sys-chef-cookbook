# -*- shell-script -*-

<%= template_header %>

<% node['sys']['ferm']['rules'].each do |domain, tables| -%>
domain <%= domain %> {
    <% tables.each do |table, chains| -%>
    table <%= table %> {
        <% chains.each do |chain, rules| -%>
        chain <%= chain %> {
            <% rules.each do |rule| -%>
            <%= rule %>
            <% end -%>
        }
        <% end -%>
    }
    <% end -%>
}
<% end -%>
